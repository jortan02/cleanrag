# Application Mode
# Set to True for local development, False for production
LOCAL_MODE=True

# GPU Settings
# Set to True to enable GPU support (requires CUDA)
USE_GPU=False

# Local Model Settings
# Path to local models directory (used when LOCAL_MODE=True)
LOCAL_MODEL_PATH=./models

# API Settings
# These are used when LOCAL_MODE=False
API_KEY=your_api_key_here
API_ENDPOINT=your_api_endpoint_here

# Debug Settings
# Set to True to enable debug information
DEBUG=False